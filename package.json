{
  "name": "millicache-headers-inspector",
  "version": "1.0.10",
  "description": "Inspect MilliCache headers in Firefox DevTools panel",
  "scripts": {
    "lint": "web-ext lint --source-dir=. --self-hosted --ignore-files '*.md' '.DS_Store' '.idea/**' '*.zip' 'package.json' 'package-lock.json' 'node_modules/**' '.env' '.env.example' '.git/**' '.gitignore' 'RELEASE.md' 'CLAUDE.md' 'docs/**' 'release-please-config.json' '.release-please-manifest.json' '.github/**'",
    "build": "web-ext build --source-dir=. --overwrite-dest --ignore-files '*.md' '.DS_Store' '.idea/**' '*.zip' 'package.json' 'package-lock.json' 'node_modules/**' '.env' '.env.example' '.git/**' '.gitignore' 'RELEASE.md' 'CLAUDE.md' 'docs/**' 'release-please-config.json' '.release-please-manifest.json' '.github/**'",
    "package": "npm run lint && npm run build",
    "publish:amo": "dotenv -e .env -- sh -c 'web-ext sign --source-dir=. --channel=unlisted --api-key=\"$AMO_JWT_ISSUER\" --api-secret=\"$AMO_JWT_SECRET\" --ignore-files \"*.md\" \".DS_Store\" \".idea/**\" \"*.zip\" \"package.json\" \"package-lock.json\" \"node_modules/**\" \".env\" \".env.example\" \".git/**\" \".gitignore\" \"RELEASE.md\" \"CLAUDE.md\" \"docs/**\" \"release-please-config.json\" \".release-please-manifest.json\" \".github/**\"'",
    "start": "web-ext run --source-dir=. --start-url about:debugging --firefox=/Applications/Firefox\\ Developer\\ Edition.app/Contents/MacOS/firefox"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "web-ext": "^8.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/millicache-headers-inspector"
  },
  "keywords": [
    "firefox",
    "extension",
    "devtools",
    "millicache",
    "headers"
  ],
  "author": "",
  "license": "MIT"
}
